<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
       <variable
            name="activity"
            type="com.example.vac_project.SignUp" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".`MainActivity.kt`">

        <TextView
            android:id="@+id/hello"
            android:text="@string/hello"
            android:fontFamily="@font/nanumsquare_aceb"
            android:textSize="36sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="172dp"/>

        <TextView
            android:id="@+id/beforLogin"
            android:text="@string/ac_have"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/signInGoogle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/logIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="@color/purple_500"
            android:background="#00ff0000"
            app:layout_constraintTop_toBottomOf="@id/beforLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/signinnormal"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="@string/join"
            app:layout_constraintTop_toBottomOf="@id/hello"
            android:layout_marginTop="136dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/nanumsquare_acb"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/signInGoogle"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="@string/google"
            app:layout_constraintTop_toBottomOf="@id/signinnormal"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/nanumsquare_acb"
            android:textSize="16sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>